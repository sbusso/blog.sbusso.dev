---
title: Home
layout: layouts/base
pagination:
  data: collections.posts
  size: 5
  alias: blogPosts
  reverse: true
---

<header
    class="flex flex-col justify-center w-full overflow-y-hidden lg:items-start"
  >
    <h1 class="my-10 text-4xl   md:text-5xl md:text-left bg-yellow-200">{{ metadata.description }}</h1>

  <p
      class="mt-0 mb-2 text-base leading-normal text-center md:text-2xl md:text-left"
    >

    {% include "components/postslist.njk" %}
    {% if pagination.href.previous %}
      <a class="p-1 px-4 border border-b-4 border-r-4 border-gray-900 border-solid rounded-full mt-7 bg-gray-50 hover:bg-white" href="{{ pagination.href.previous }}">&laquo; Previous </a>
    {% endif %}
    {% if pagination.href.next %}
      <a class="p-1 px-4 border border-b-4 border-r-4 border-gray-900 border-solid rounded-full mt-7 bg-gray-50 hover:bg-white" href="{{ pagination.href.next }}">Next &raquo;</a>
    {% endif %}
  </p>
</header>